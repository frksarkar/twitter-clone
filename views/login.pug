extends layout/header.pug

block header 
    link(rel="stylesheet", href="style/login.css")

block body 
    .container 
        .wrapper 
            .logo
                img(src="https://static.cdnlogo.com/logos/t/48/twitter.png", alt="", srcset="")
            h2 Log in to Twitter 
            form(method="post") 
                input#emailInput(type="text", name="email", placeholder="Username or email", required='')
                input#passwordInput(type="password", name="password",placeholder='Password', required='')
                p
                    input#remember(type="checkbox", name="")
                    span Remember me 
                        a(href="forgot-password") Forgot password?
                input(type="submit", value="Login")
            p Don't have an account? 
                a(href="/register") Sign up >>

